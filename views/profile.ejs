<body>

  <h1>Sad Girl Cafe</h1>
    <div class="col-sm-6">
      <h2> We no longer drink water, but we drink our own tears! ğŸ’ª</h2>
      <h3>Customer Orders Are Displayed Here:</h3>
      <div class="messages">
      <% for(var i=0; i<messages.length; i++) {%>
        <section class="message">
          <h3 class="email">Email: <%= messages[i].email %></h3>
          <%console.log(messages[i].completed)%>
          <h2 class="name"><%= messages[i].name %></h2>
          <h4 class="order"><%= messages[i].order %></h4>
          <span><i class="fa-solid fa-check-double"></i></span>
          <span><i class="fa-solid fa-trash-can"></i></span>
          <span> 
          <%   
          let completedMessage = "";
            if (messages[i].completed ===true){ 
              completedMessage = "done"
            }
          %>
          <%=completedMessage;%> 
        </span>
        </section>
      <% } %>
      </div>

      <h2>Submit Customer Orders</h2>
    <% if (user.local.email) { %>
      <section class="input">
      <form action="/submitOrder" method="POST">
        <input class="subEmail" type="text" value="<%= user.local.email %>" name="email">
        <input class="subName" type="text" placeholder="Customer Name" name="name">
        <input class="subOrder" type="text" placeholder="Order" name="order">
        <button type="submit">Submit Order</button>
      </form>
      </section>
    </div>
    <% } %>

</form>

<a class="login" href="/login">Barista Account</a>

